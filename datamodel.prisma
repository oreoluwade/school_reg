
type User {
  id: ID! @id
  name: String!
  email: String! @unique
  regNo: String! @unique
  gender: String
  department: Department @relation(name: "DepartmentsUsersBelongTo", onDelete: CASCADE)
  faculty: Faculty
  courses: [Course]
  level: String
  phone: String
  address: String
  image: String
}

type Course {
  id: ID! @id
  name: String! @unique
  department: Department! @relation(name: "CoursesInADepartment")
  creditUnits: Int!
  students: [User]
  description: String!
  level: String!
}

type Faculty {
  id: ID! @id
  name: String! @unique
  departments: [Department!]! @relation(onDelete: CASCADE)
}

type Department {
  id: ID! @id
  name: String! @unique
  faculty: Faculty!
  courses: [Course!]! @relation(name: "CoursesInADepartment", onDelete: CASCADE)
  students: [User!]! @relation(name: "DepartmentsUsersBelongTo")
}
